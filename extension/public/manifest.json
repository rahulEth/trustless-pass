{
  "manifest_version": 3,
  "name": "Trust Pass",
  "description": "Decentralized Password Saver Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "trust-pass.png"
  },
  "icons": {
    "16": "trust-pass-16.png",
    "32": "trust-pass-32.png",
    "48": "trust-pass-48.png",
    "128": "trust-pass-128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "externally_connectable": {
    "matches": ["https://metamask.io/*"],
    "ids": ["*"]
  }
}
